{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"module": "ES2022",
		"target": "ES2021",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"declaration": true,
		"verbatimModuleSyntax": true,
		"resolveJsonModule": true
	},
	"exclude": ["dist"]
}
